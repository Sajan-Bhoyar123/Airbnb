<% layout("/layouts/biolerplate")%>
<body>
     <h1 class="col-4 offset-4" >Login Page</h1>
    <div class="row">
        <div class="col col-4 offset-3">
            <form method="post" action="/login" class="needs-validation" novalidate>
                  <div class="mb-3">
                         <label for="username" class="form-label">username</label>
                         <input id="username" name="username" type="text" placeholder="Enter  username" class="form-control" required>
                         <div class="invalid-feedback">username should be valid </div>
                   </div>
                   <div class="mb-3">
                        <label for="password" class="form-label">password</label>
                         <input type="password" id="password" name="password" type="text" placeholder="Enter password" class="form-control" required>
                         <div class="invalid-feedback">password should be valid </div>
                   </div>
                   
                   <div class="mb-3">           
                       <button class="btn btn-success" >Login</button>
                   </div> 
            </form>
        </div>
    </div>
</body>